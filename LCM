#include <stdio.h>


int main() {
	int a, b, Lcm;
	printf("Enter two numbers to find the lcm: ");
	scanf("%d%d", &a, &b);
	Lcm=lcm(a,b);
	printf("The lcm of %d and %d is: %d", a, b, Lcm);
	
	return 0;
}

int lcm(int a,int b)
{
	static int l=1;
	if (l%a==0 && l%b==0)
	{
		return l;
	}
	else
	{
		l++;
		lcm(a,b);
		return l;
	}
	
	
	
}
